package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		
		
		
		String usuario = JOptionPane.showInputDialog("Digite o usuario");
		while (usuario.length()<=5 || usuario.length()>20 );{
			usuario = JOptionPane.showInputDialog("Digite novamente o usuário com 5 a 20 caracteres");
		}
				
		Byte mes = Byte.parseByte(JOptionPane.showInputDialog("Digite o mês"));
		while (mes<1 || mes>12); {
			mes = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o mês entre 1 e 12"));
		}
		
				short ano = Short.parseShort(JOptionPane.showInputDialog("Digite o ano"));
		while (ano>=2003); {
			usuario = JOptionPane.showInputDialog("Digite novamente o ano anterior a 2003");
		}
		
				
		byte dia = Byte.parseByte(JOptionPane.showInputDialog("Digite o dia"));
		if (mes==2) {
			while (dia<1 || dia>29) {
				dia = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o dia"));
			}
		}else if (mes==4 || mes==6 ||mes==9 ||mes==11) {
		while (dia<1 || dia>30)
			dia = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o dia"));
		}
		
		
		short ano = Short.parseShort(JOptionPane.showInputDialog("Digite o ano"));
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
